<!DOCTYPE html>
<html>
<head>
    <title>Test App - @ViewBag.Title</title>
    <meta charset="utf-8" />
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootswatch/default/bootstrap.min.css" id="bootStyle" />
    <link rel="stylesheet" href="~/css/main.css" />
</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <img src="~/img/small-logo.png" class="logo" />
                <span class="text-muted">
                    <small>Select Theme:</small>
                </span>
                <select class="changeBoot" onchange="changeBoot(this)">               
                    <option value="default">Default</option>
                    <option value="cerulean">Cerulean</option>
                    <option value="cosmo">Cosmo</option>
                    <option value="cyborg">Cyborg</option>
                    <option value="darkly">Darkly</option>
                    <option value="flatly">Flatly</option>
                    <option value="journal">Journal</option>
                    <option value="lumen">Lumen</option>
                    <option value="paper">Paper</option>
                    <option value="readable">Readable</option>
                    <option value="sandstone">Sandstone</option>
                    <option value="simplex">Simplex</option>
                    <option value="slate">Slate</option>
                    <option value="spacelab">Spacelab</option>
                    <option value="superhero">Superhero</option>
                    <option value="united">United</option>
                    <option value="yeti">Yeti</option>
                </select>
                <label class="text-muted">Inverse
                    <input type="checkbox" onchange="switchInverse(this)" />
                </label>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a asp-controller="Main" asp-action="Search" class="navbar-brand">Search Test</a>&nbsp;
                    </li>
                    <li>
                        <a asp-controller="Main" asp-action="Index" class="navbar-brand">About</a>&nbsp;
                    </li>
                </ul>
            </div>
        </nav>
        <div id="main" class="container-fluid">
            <div>@RenderBody()</div>
        </div>
        <div id="footer" class="container-fluid">
            <div class="navbar navbar-default navbar-fixed-bottom">
                <h4 class="text-center text-info">&copy; 2016 Joey Guziejka</h4>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>    
    @RenderSection("Scripts", false)
    
    <script type="text/javascript">
        function changeBoot(op) {
            var bootStyle = document.getElementById('bootStyle');
            var themeValue = op.value;            
            if (themeValue) {
                var href = "../lib/bootswatch/" + themeValue + "/bootstrap.min.css";
                bootStyle.href = href;
            }
        }
        function switchInverse(cb) {
            var $footer = $('#wrapper .navbar');
            $footer.toggleClass('navbar-default');
            $footer.toggleClass('navbar-inverse');
        }
    </script>

</body>
</html>
